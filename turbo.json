{
  "$schema": "https://turborepo.com/schema.v2.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "globalEnv": ["NODE_ENV", "VERCEL_ENV", "VERCEL_URL", "NEXT_PUBLIC_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "out/**", "build/**", "lib/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"],
      "inputs": [
        "src/**",
        "app/**",
        "pages/**",
        "components/**",
        "lib/**",
        "utils/**",
        "styles/**",
        "*.config.{js,ts,mjs,cjs}",
        "*.json",
        "!node_modules/**",
        "!dist/**",
        "!.next/**",
        "!out/**"
      ],
      "cache": true
    },
    "@sonr.io/ui#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "*.tsbuildinfo"],
      "inputs": ["src/**", "tsconfig.json", "package.json"],
      "cache": true
    },
    "@sonr.io/enclave#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "*.tsbuildinfo", "dist/enclave.wasm"],
      "inputs": [
        "src/**/*.ts",
        "main.go",
        "**/*.go",
        "go.mod",
        "go.sum",
        "tsconfig.json",
        "package.json"
      ],
      "cache": true
    },
    "@sonr.io/vault#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "*.tsbuildinfo", "dist/vault.wasm", "dist/wasm_exec.js"],
      "inputs": [
        "src/**/*.ts",
        "main.go",
        "**/*.go",
        "go.mod",
        "go.sum",
        "tsconfig.json",
        "package.json",
        "wasm_exec.js"
      ],
      "cache": true
    },
    "@sonr.io/sdk#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "*.tsbuildinfo"],
      "inputs": ["src/**", "tsconfig.json", "package.json", "scripts/**"],
      "cache": true
    },
    "@sonr.io/react#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "*.tsbuildinfo"],
      "inputs": ["src/**", "tsconfig.json", "package.json"],
      "cache": true
    },
    "@sonr.io/frontend#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV", "VITE_*"],
      "inputs": [
        "src/**",
        "public/**",
        "index.html",
        "vite.config.ts",
        "tailwind.config.ts",
        "tsconfig.json",
        "package.json"
      ],
      "cache": true
    },
    "@sonr.io/frontend#dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputs": [],
      "inputs": ["src/**", "app/**", "*.config.{js,ts,mjs,cjs}", "*.json", "**/*.go"],
      "cache": false
    },
    "lint": {
      "dependsOn": [],
      "outputs": [],
      "inputs": ["src/**", "app/**", "*.config.{js,ts,mjs,cjs}", "*.json", ".oxlintrc.json", "**/*.go", ".golangci.yml"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "test/**", "**/*.test.{ts,tsx,js,jsx}", "**/*.spec.{ts,tsx,js,jsx}"],
      "cache": true,
      "env": ["NODE_ENV", "CI"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": ["*.tsbuildinfo"],
      "inputs": ["src/**", "app/**", "*.ts", "*.tsx", "tsconfig.json"],
      "cache": true
    },
    "check": {
      "dependsOn": ["typecheck", "lint"],
      "outputs": [],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "@sonr.io/frontend#deploy": {
      "dependsOn": ["@sonr.io/frontend#build"],
      "outputs": [],
      "cache": false,
      "env": ["NODE_ENV", "CLOUDFLARE_*", "WRANGLER_*", "VITE_*"],
      "inputs": ["dist/**", "wrangler.toml"]
    },
    "deploy": {
      "dependsOn": ["@sonr.io/frontend#deploy"],
      "outputs": [],
      "cache": false,
      "env": ["NODE_ENV", "CLOUDFLARE_*", "WRANGLER_*"]
    }
  }
}
