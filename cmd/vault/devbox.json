{
  "packages": [
    "go@1.24",
    "nodejs@20",
    "pnpm@10"
  ],
  "shell": {
    "init_hook": [
      "export GOOS=js",
      "export GOARCH=wasm",
      "go mod download",
      "pnpm install"
    ],
    "scripts": {
      "build": "pnpm run build",
      "build:wasm": "pnpm run build:wasm",
      "build:ts": "pnpm run build:ts",
      "watch": "pnpm run watch",
      "test": "pnpm run test",
      "lint": "pnpm run lint",
      "fmt": "go fmt ./...",
      "clean": "pnpm run clean"
    }
  }
}
