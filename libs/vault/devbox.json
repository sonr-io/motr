{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "go@1.24"
  ],
  "env": {
    "GOOS": "js",
    "GOARCH": "wasm"
  },
  "shell": {
    "init_hook": [
      "go mod download",
      "bun install"
    ],
    "scripts": {
      "bump": ["cz --no-raise 6,21 bump --yes --increment PATCH"],
      "release": [
        "devbox run wasm",
        "wrangler r2 object put cdn/vault.wasm -f dist/vault.wasm --remote"
      ],
      "publish": "echo 'Skipping publish - unimplemented'",
      "wasm": [
        "mkdir -p dist", 
        "go build -ldflags='-s -w' -trimpath -o dist/vault.wasm .",
        "rm -f dist/wasm_exec.js",
        "cp wasm_exec.js dist/",
        "chmod 644 dist/wasm_exec.js"
      ],
      "test": "go test ./... || echo 'No Go tests found in vault'",
      "format": "go fmt ./..."
    }
  }
}
