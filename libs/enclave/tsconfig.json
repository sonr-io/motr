{
  "extends": "../../cnfg/typescript/library.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "WebWorker"],
    "types": ["vite/client"],
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
