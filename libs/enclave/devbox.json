{
  "packages": [
    "go@1.24",
    "nodejs@20",
    "bun@1"
  ],
  "shell": {
    "init_hook": [
      "export GOOS=wasip1",
      "export GOARCH=wasm",
      "go mod download",
      "bun install"
    ],
    "scripts": {
      "build": "go build -o dist/enclave.wasm ./main.go",
      "test": "go test ./...",
      "lint": "golangci-lint run ./...",
      "fmt": "gofmt -w $(find . -name '*.go' -not -path './dist/*')"
    }
  }
}
