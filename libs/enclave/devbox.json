{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": ["go@1.24"],
  "env": {
    "GOOS": "wasip1",
    "GOARCH": "wasm",
    "GUM_SPIN_ALIGN": "right",
    "GUM_SPIN_TIMEOUT": "8000",
    "GUM_SPIN_SHOW_ERROR": "true",
    "GUM_SPIN_SPINNER": "pulse"
  },
  "shell": {
    "init_hook": ["go mod download", "bun install"],
    "scripts": {
      "bump": ["cz --no-raise 6,21 bump --yes --increment PATCH"],
      "release": [
        "devbox run wasm",
        "wrangler r2 object put cdn/enclave.wasm -f dist/enclave.wasm --remote"
      ],
      "publish": "gum style --foreground 214 '‚ö†Ô∏è  Skipping publish - unimplemented'",
      "wasm": [
        "mkdir -p dist",
        "export GOROOT=$(readlink -f $(which go) | sed 's|/bin/go||' | sed 's|/share/go||')/share/go",
        "go mod tidy",
        "go build -ldflags='-s -w' -trimpath -o dist/enclave.wasm .",
        "rm -f dist/wasm_exec.js",
        "cp \"$GOROOT/lib/wasm/wasm_exec.js\" dist/",
        "chmod 644 dist/wasm_exec.js"
      ],
      "test": "go test ./... || gum style --foreground 245 'üìù No Go tests found in enclave'",
      "format": "go fmt ./... || gum style --foreground 46 '‚úì No Go formatting issues found in enclave'"
    }
  }
}
