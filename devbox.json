{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "go@1.24",
    "nodejs@20",
    "bun@1",
    "gum@latest"
  ],
  "env": {},
  "shell": {
    "init_hook": [
      "echo 'Setting up Motor development environment...'",
      "go mod download || true",
      "bun install"
    ],
    "scripts": {
      "deploy": "bun run deploy"
    }
  }
}
