{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "go@1.24",
    "bun@1.3.0",
    "gum@latest"
  ],
  "env": {},
  "shell": {
    "init_hook": [
      "bun install"
    ],
    "scripts": {
      "install": "bun install",
      "build": "bun run build",
      "dev": "bun run dev",
      "test": "bun run test",
      "deploy": "bun run deploy"
    }
  }
}
