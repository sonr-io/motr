{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "gum@latest",
    "bun@latest"
  ],
  "env": {},
  "shell": {
    "init_hook": [
      "curl -fsSL https://bun.sh/install | bash",
      "bun install"
    ],
    "scripts": {
      "build": "bun run build",
      "test": "bun run test",
      "dev": "pnpm dev",
      "format": "pnpm format:all",
      "lint": "bun run lint && bun run lint:go",
      "clean": "bun run clean"
    }
  }
}
