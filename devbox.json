{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "go@1.24",
    "nodejs@20",
    "bun@1",
    "gum@latest"
  ],
  "env": {},
  "shell": {
    "init_hook": [
      "echo 'Setting up Motor development environment...'",
      "go mod download || true",
      "bun install"
    ],
    "scripts": {
      "build": "bun run build",
      "test": "bun run test",
      "dev": "bun run dev",
      "format": "bun run format:all",
      "lint": "bun run lint && bun run lint:go",
      "clean": "bun run clean"
    }
  }
}
