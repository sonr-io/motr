{
  "name": "@sonr.io/motr",
  "version": "0.1.0",
  "private": true,
  "description": "Motor - Multi-purpose WebAssembly service for secure cryptographic operations and payment processing",
  "author": "Sonr Team",
  "license": "MIT",
  "homepage": "https://github.com/sonr-io/motr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonr-io/motr.git"
  },
  "bugs": {
    "url": "https://github.com/sonr-io/motr/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.3.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "pkgs/*"
  ],
  "packageManager": "bun@1.3.0",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run @sonr.io/frontend#dev",
    "lint": "bunx oxlint@latest .",
    "format": "bunx oxfmt@latest .",
    "format:check": "bunx oxfmt@latest --check .",
    "check": "bunx oxlint@latest . && bunx oxfmt@latest --check .",
    "check:fix": "bunx oxlint@latest --fix . && bunx oxfmt@latest .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules bun.lock",
    "generate": "bun --filter '@sonr.io/sdk' run gen",
    "deploy": "turbo run @sonr.io/frontend#deploy",
    "kv:create": "bun --filter '@pkgs/cloudflare' run kv:create",
    "kv:populate": "bun --filter '@pkgs/cloudflare' run kv:populate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@bufbuild/protoc-gen-es": "2.9.0",
    "@bufbuild/protoplugin": "2.9.0",
    "@types/node": "^24.7.2",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.0",
    "oxlint": "^1.23.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.43.0"
  },
  "overrides": {
    "esbuild": "0.20.0",
    "vite": "5.4.20",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@noble/hashes": "2.0.0",
    "@noble/secp256k1": "2.1.0",
    "@bufbuild/protobuf": "1.10.0",
    "@bufbuild/protoc-gen-es": "1.10.0"
  },
  "dependencies": {
    "@bufbuild/protobuf": "1.10.0",
    "@noble/hashes": "2.0.0",
    "@noble/secp256k1": "2.1.0",
    "glob": "^11.0.3",
    "lottie-react": "^2.4.1",
    "motion": "^12.23.24",
    "sonner": "^2.0.7",
    "swagger2openapi": "^7.0.8",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  }
}
