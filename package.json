{
  "name": "@sonr.io/motr",
  "version": "0.1.0",
  "private": true,
  "description": "Motor - Multi-purpose WebAssembly service for secure cryptographic operations and payment processing",
  "author": "Sonr Team",
  "license": "MIT",
  "homepage": "https://github.com/sonr-io/motr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonr-io/motr.git"
  },
  "bugs": {
    "url": "https://github.com/sonr-io/motr/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.3.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "pkgs/*"
  ],
  "packageManager": "bun@1.3.0",
  "scripts": {
    "build": "turbo run build",
    "build:all": "bun run build",
    "build:enclave": "bun --filter '@sonr.io/enclave' run build",
    "build:es": "bun --filter '@sonr.io/es' run build",
    "build:ui": "bun --filter '@sonr.io/ui' run build",
    "build:do": "bun --filter '@sonr.io/do' run build",
    "build:vault": "bun --filter '@sonr.io/vault' run build",
    "build:frontend": "bun --filter 'frontend' run build",
    "test": "turbo run test",
    "test:all": "bun test",
    "test:enclave": "bun --filter '@sonr.io/enclave' test",
    "test:es": "bun --filter '@sonr.io/es' test",
    "test:ui": "bun --filter '@sonr.io/ui' test",
    "test:vault": "bun --filter '@sonr.io/vault' test",
    "dev": "turbo run dev --filter=frontend",
    "dev:frontend": "bun --filter 'frontend' run dev",
    "lint": "biome check .",
    "lint:go": "cd libs/enclave && go fmt ./... && cd ../vault && go fmt ./...",
    "format": "biome format --write .",
    "format:all": "bun run format && bun run lint:go",
    "check": "biome check --write .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules bun.lock",
    "clean:dist": "rm -rf dist build pkgs/*/dist libs/*/dist apps/*/dist",
    "gen:protobufs": "bun --filter '@sonr.io/es' run gen",
    "docs": "cd docs && bunx mint dev",
    "deploy": "turbo run deploy",
    "deploy:frontend": "bun --filter 'frontend' run deploy"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^24.7.1",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.2"
  },
  "overrides": {
    "esbuild": "0.20.0",
    "vite": "5.4.20",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3"
  },
  "dependencies": {
    "glob": "^11.0.3",
    "swagger2openapi": "^7.0.8",
    "yaml": "^2.8.1"
  }
}
