{
  "name": "@sonr.io/motr",
  "version": "0.1.0",
  "private": true,
  "description": "Motor - Multi-purpose WebAssembly service for secure cryptographic operations and payment processing",
  "author": "Sonr Team",
  "license": "MIT",
  "homepage": "https://github.com/sonr-io/motr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonr-io/motr.git"
  },
  "bugs": {
    "url": "https://github.com/sonr-io/motr/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.3.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "pkgs/*",
    "cnfg"
  ],
  "packageManager": "bun@1.3.0",
  "trustedDependencies": [
    "@bufbuild/buf",
    "@bufbuild/protobuf",
    "@bufbuild/protoc-gen-es",
    "@extism/extism",
    "esbuild",
    "protobufjs",
    "sharp",
    "@resvg/resvg-js",
    "@parcel/watcher"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:libs": "turbo run build --filter='./libs/*'",
    "build:pkgs": "turbo run build --filter='./pkgs/*'",
    "test": "turbo run test",
    "test:all": "bun run --filter '*' test",
    "dev:auth": "bun run --filter @sonr.io/auth dev",
    "dev:console": "bun run --filter @sonr.io/console dev",
    "dev:profile": "bun run --filter @sonr.io/profile dev",
    "dev:search": "bun run --filter @sonr.io/search dev",
    "dev:all": "bun run --filter './apps/*' dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --continue -- --fix",
    "format": "turbo run format",
    "check": "turbo run check",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules bun.lock",
    "clean:turbo": "rm -rf .turbo node_modules/.cache/turbo",
    "generate": "bun run --filter @sonr.io/sdk gen",
    "deploy": "turbo run deploy",
    "deploy:auth": "turbo run @sonr.io/auth#deploy",
    "deploy:console": "turbo run @sonr.io/console#deploy",
    "deploy:profile": "turbo run @sonr.io/profile#deploy",
    "deploy:search": "turbo run @sonr.io/search#deploy",
    "kv:populate": "bun run --filter @sonr.io/auth kv:populate",
    "turbo:graph": "turbo run build --graph=graph.html",
    "turbo:profile": "turbo run build --profile=profile.json",
    "turbo:dry": "turbo run build --dry=json",
    "workspace:install": "bun install",
    "workspace:update": "bun update --latest",
    "workspace:list": "bun pm ls --all",
    "workspace:outdated": "bun pm ls --all | grep -E '(\\^|~)'"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@bufbuild/protoc-gen-es": "1.10.0",
    "@bufbuild/protoplugin": "2.10.0",
    "@types/node": "^24.9.1",
    "@vitest/ui": "^4.0.1",
    "happy-dom": "^20.0.8",
    "oxlint": "^1.24.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.1",
    "wrangler": "^4.44.0"
  },
  "overrides": {
    "esbuild": "0.20.0",
    "vite": "5.4.20",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@noble/hashes": "2.0.0",
    "@noble/secp256k1": "2.1.0",
    "@bufbuild/protobuf": "1.10.0",
    "@bufbuild/protoc-gen-es": "1.10.0"
  },
  "dependencies": {
    "@bufbuild/protobuf": "1.10.0",
    "@emnapi/wasi-threads": "^1.1.0",
    "@noble/hashes": "2.0.0",
    "@noble/secp256k1": "2.1.0",
    "glob": "^11.0.3",
    "lottie-react": "^2.4.1",
    "motion": "^12.23.24",
    "sonner": "^2.0.7",
    "swagger2openapi": "^7.0.8",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  }
}
