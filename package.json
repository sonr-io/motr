{
  "name": "@sonr.io/motr",
  "version": "0.1.0",
  "private": true,
  "description": "Motor - Multi-purpose WebAssembly service for secure cryptographic operations and payment processing",
  "author": "Sonr Team",
  "license": "MIT",
  "homepage": "https://github.com/sonr-io/motr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonr-io/motr.git"
  },
  "bugs": {
    "url": "https://github.com/sonr-io/motr/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.3.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "pkgs/*"
  ],
  "packageManager": "bun@1.3.0",
  "trustedDependencies": [
    "@bufbuild/buf",
    "@bufbuild/protobuf",
    "@bufbuild/protoc-gen-es",
    "@extism/extism",
    "esbuild",
    "protobufjs",
    "sharp",
    "@resvg/resvg-js",
    "@parcel/watcher"
  ],
  "scripts": {
    "build": "bunx --bun turbo run //#worker:build",
    "build:apps": "bunx --bun turbo build --filter='./apps/*'",
    "build:libs": "bunx --bun turbo build --filter='./libs/*'",
    "build:pkgs": "bunx --bun turbo build --filter='./pkgs/*'",
    "build:force": "bunx --bun turbo run //#worker:build --force",
    "test": "bunx --bun turbo test",
    "test:all": "bun --filter '*' test",
    "test:watch": "bunx --bun turbo test -- --watch",
    "dev": "bunx --bun turbo run //#worker:build && wrangler dev",
    "lint": "bunx --bun turbo lint",
    "lint:fix": "bunx --bun turbo lint --continue -- --fix",
    "format": "bunx --bun turbo format",
    "check": "bunx --bun turbo check",
    "typecheck": "bunx --bun turbo typecheck",
    "clean": "rm -rf .turbo /tmp/turbod node_modules/.cache public && bunx --bun turbo clean && rm -rf node_modules public",
    "generate": "bun --filter @sonr.io/sdk gen",
    "deploy": "bunx --bun turbo run //#worker:deploy",
    "deploy:staging": "bunx --bun turbo run //#worker:deploy --env staging",
    "deploy:production": "bunx --bun turbo run //#worker:deploy --env production",
    "preview": "bunx --bun turbo run //#worker:build && wrangler dev --remote",
    "logs": "wrangler tail --format pretty",
    "kv:populate": "bun --filter @sonr.io/auth kv:populate",
    "turbo:daemon": "bunx --bun turbo daemon",
    "turbo:graph": "bunx --bun turbo build --graph=graph.html",
    "turbo:profile": "bunx --bun turbo build --profile=profile.json",
    "turbo:dry": "bunx --bun turbo build --dry=json",
    "workspace:install": "bun install",
    "workspace:update": "bun update --latest",
    "workspace:list": "bun pm ls --all",
    "workspace:prune": "bun pm cache rm"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@bufbuild/protoc-gen-es": "1.10.0",
    "@bufbuild/protoplugin": "2.10.0",
    "@cloudflare/vite-plugin": "^1.13.15",
    "@cloudflare/workers-types": "^4.20251011.0",
    "@types/node": "^24.9.1",
    "@vitest/ui": "^4.0.1",
    "happy-dom": "^20.0.8",
    "oxlint": "^1.24.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.1",
    "wrangler": "^4.44.0"
  },
  "overrides": {
    "esbuild": "0.20.0",
    "vite": "5.4.20",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@noble/hashes": "2.0.0",
    "@noble/secp256k1": "2.1.0",
    "@bufbuild/protobuf": "1.10.0",
    "@bufbuild/protoc-gen-es": "1.10.0"
  },
  "dependencies": {
    "@bufbuild/protobuf": "1.10.0",
    "@emnapi/wasi-threads": "^1.1.0",
    "@noble/hashes": "2.0.0",
    "@noble/secp256k1": "2.1.0",
    "glob": "^11.0.3",
    "hono": "^4.10.2",
    "lottie-react": "^2.4.1",
    "motion": "^12.23.24",
    "sonner": "^2.0.7",
    "swagger2openapi": "^7.0.8",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  }
}
