{
  "name": "@sonr.io/motr",
  "version": "0.1.0",
  "private": true,
  "description": "Motor - Multi-purpose WebAssembly service for secure cryptographic operations and payment processing",
  "author": "Sonr Team",
  "license": "MIT",
  "homepage": "https://github.com/sonr-io/motr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonr-io/motr.git"
  },
  "bugs": {
    "url": "https://github.com/sonr-io/motr/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.3.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "pkgs/*"
  ],
  "packageManager": "bun@1.3.0",
  "trustedDependencies": [
    "@bufbuild/buf",
    "@bufbuild/protobuf",
    "@bufbuild/protoc-gen-es",
    "@extism/extism",
    "esbuild",
    "protobufjs",
    "sharp",
    "@resvg/resvg-js",
    "@parcel/watcher"
  ],
  "scripts": {
    "build": "turbo run //#worker:build",
    "build:apps": "turbo build --filter='./apps/*'",
    "build:libs": "turbo build --filter='./libs/*'",
    "build:pkgs": "turbo build --filter='./pkgs/*'",
    "build:force": "turbo run //#worker:build --force",
    "bundle:assets": "rm -rf public && mkdir -p public/wasm && cp -r apps/auth/dist public/auth && cp -r apps/console/dist public/console && cp -r apps/profile/dist public/profile && cp -r apps/search/dist public/search && cp libs/enclave/dist/enclave.wasm public/wasm/enclave.wasm && cp libs/vault/dist/vault.wasm public/wasm/vault.wasm && cp libs/vault/dist/wasm_exec.js public/wasm/wasm_exec.js",
    "test": "turbo test",
    "test:all": "bun --filter '*' test",
    "test:watch": "turbo test -- --watch",
    "dev": "turbo run //#worker:build && wrangler dev",
    "dev:auth": "bun --filter @sonr.io/auth dev",
    "dev:console": "bun --filter @sonr.io/console dev",
    "dev:profile": "bun --filter @sonr.io/profile dev",
    "dev:search": "bun --filter @sonr.io/search dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint --continue -- --fix",
    "format": "turbo format",
    "check": "turbo check",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules public",
    "clean:cache": "rm -rf .turbo node_modules/.cache public",
    "clean:turbo": "turbo daemon clean && rm -rf .turbo",
    "generate": "bun --filter @sonr.io/sdk gen",
    "deploy": "turbo run //#worker:deploy",
    "deploy:staging": "turbo run //#worker:deploy --env staging",
    "deploy:production": "turbo run //#worker:deploy --env production",
    "preview": "turbo run //#worker:build && wrangler dev --remote",
    "logs": "wrangler tail --format pretty",
    "kv:populate": "bun --filter @sonr.io/auth kv:populate",
    "turbo:daemon": "turbo daemon",
    "turbo:graph": "turbo build --graph=graph.html",
    "turbo:profile": "turbo build --profile=profile.json",
    "turbo:dry": "turbo build --dry=json",
    "workspace:install": "bun install",
    "workspace:update": "bun update --latest",
    "workspace:list": "bun pm ls --all",
    "workspace:prune": "bun pm cache rm"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@bufbuild/protoc-gen-es": "1.10.0",
    "@bufbuild/protoplugin": "2.10.0",
    "@cloudflare/workers-types": "^4.20251011.0",
    "@types/node": "^24.9.1",
    "@vitest/ui": "^4.0.1",
    "happy-dom": "^20.0.8",
    "oxlint": "^1.24.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.1",
    "wrangler": "^4.44.0"
  },
  "overrides": {
    "esbuild": "0.20.0",
    "vite": "5.4.20",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@noble/hashes": "2.0.0",
    "@noble/secp256k1": "2.1.0",
    "@bufbuild/protobuf": "1.10.0",
    "@bufbuild/protoc-gen-es": "1.10.0"
  },
  "dependencies": {
    "@bufbuild/protobuf": "1.10.0",
    "@emnapi/wasi-threads": "^1.1.0",
    "@noble/hashes": "2.0.0",
    "@noble/secp256k1": "2.1.0",
    "glob": "^11.0.3",
    "hono": "^4.10.2",
    "lottie-react": "^2.4.1",
    "motion": "^12.23.24",
    "sonner": "^2.0.7",
    "swagger2openapi": "^7.0.8",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  }
}
