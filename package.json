{
  "name": "@sonr.io/motr",
  "version": "0.1.0",
  "private": true,
  "description": "Motor - Multi-purpose WebAssembly service for secure cryptographic operations and payment processing",
  "author": "Sonr Team",
  "license": "MIT",
  "homepage": "https://github.com/sonr-io/motr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonr-io/motr.git"
  },
  "bugs": {
    "url": "https://github.com/sonr-io/motr/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "pkgs/*"
  ],
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build": "turbo run build",
    "build:all": "pnpm build",
    "build:enclave": "pnpm --filter '@sonr.io/enclave' build",
    "build:es": "pnpm --filter '@sonr.io/es' build",
    "build:ui": "pnpm --filter '@sonr.io/ui' build",
    "build:do": "pnpm --filter '@sonr.io/do' build",
    "build:frontend": "pnpm --filter 'frontend' build",
    "test": "turbo run test",
    "test:all": "pnpm test",
     "test:enclave": "pnpm --filter '@sonr.io/enclave' test",
     "test:es": "pnpm --filter '@sonr.io/es' test",
     "test:ui": "pnpm --filter '@sonr.io/ui' test",
     "test:vault": "pnpm --filter '@sonr.io/vault' test",
    "dev": "turbo run dev --filter=frontend",
    "dev:frontend": "pnpm --filter 'frontend' dev",
    "lint": "biome check .",
    "lint:go": "cd packages/enclave && go fmt ./...",
    "format": "biome format --write .",
    "format:all": "pnpm format && pnpm lint:go",
    "check": "biome check --write .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:dist": "rm -rf dist build packages/*/dist apps/*/dist",
    "gen:protobufs": "pnpm --filter '@sonr.io/es' gen:protobufs",
    "docs": "cd docs && npx -y mint dev"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^24.7.1",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.2"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.20.0",
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "@types/react": "^19.0.8",
      "@types/react-dom": "^19.0.3"
    },
    "peerDependencyRules": {
      "ignoreMissing": []
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@bufbuild/buf",
      "es5-ext",
      "esbuild",
      "sharp",
      "workerd"
    ]
  },
  "dependencies": {
    "glob": "^11.0.3",
    "swagger2openapi": "^7.0.8",
    "yaml": "^2.8.1"
  }
}
